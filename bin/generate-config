#!/usr/bin/env ruby

# Generates a sample configuration file
#
# generate-config --organization <organization name> [--token <token>]
#   organization: The organization key in apidoc
#   token: Your apidoc token for accessing applications wthin this
#     organization. The token is optional; if you do not specify a token
#     you will have access to all public apidoc applications
#

load File.join(File.dirname(__FILE__), 'apidoc-cli-config')

args = ApidocCli::Args.parse(ARGV.join(" "))

if args[:organization].nil?
  puts "organization is required"
  exit(1)
end

puts <<-eos
[default]
organization = #{args[:organization]}

[organization gilt]
eos

if args[:token]
  puts "token = #{args[:token]}"
end

