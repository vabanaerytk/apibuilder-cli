#!/usr/bin/env ruby

# Generates a sample configuration file
#
# generate-config --profile <profile name> [--token <token>]
#   profile: The profile key in apidoc
#   token: Your apidoc token for accessing applications wthin this
#     profile. The token is optional; if you do not specify a token
#     you will have access to all public apidoc applications
#

load File.join(File.dirname(__FILE__), 'apidoc-cli-config')

args = ApidocCli::Args.parse(ARGV.join(" "))

if args[:profile].nil?
  puts "profile is required"
  exit(1)
end

puts <<-eos
[default]
profile = #{args[:profile]}

[profile #{args[:profile]}]
token = #{args[:token]}
eos


